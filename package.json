{
  "name": "monorepo",
  "description": "The Nifty Lair monorepo for Chainlink hackathon 2021",
  "version": "0.0.1",
  "main": "",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy-mumbai": "npx hardhat run --network mumbai scripts/deploy.js",
    "deploy-rinkeby": "npx hardhat run --network rinkeby scripts/deploy.js",
    "deploy-nft-mumbai": "npx hardhat run --network mumbai scripts/deploySampleNFT.js",
    "deploy-nft-mumbai2": "npx hardhat run --network mumbai scripts/deploySampleERC721URI.js",
    "deploy-nft-rinkeby": "npx hardhat run --network rinkeby scripts/deploySampleNFT.js",
    "verify": "npx hardhat verify",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "lint": "prettier --list-different 'contracts/**/*.sol'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-nifty-lair/monorepo.git"
  },
  "keywords": [
    "hackathon"
  ],
  "author": "Riccardo Persiani <r.persiani92@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/the-nifty-lair/monorepo/issues"
  },
  "homepage": "https://github.com/the-nifty-lair/monorepo#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "hardhat": "^2.6.7",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18"
  }
}
